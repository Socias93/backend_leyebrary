generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider          = "postgresql"
  url               = env("DATABASE_URL")
  shadowDatabaseUrl = env("SHADOW_DATABASE_URL")
}

enum ItemType {
  Book
  DVD
  AudioBook
  ReferenceBook
}

model Category {
  id       String @id @default(cuid())
  name     String
  imageUrl String
  items    Item[]
}

model Item {
  id           String    @id @default(cuid())
  title        String
  categoryId   String
  attributes   Json?
  type         ItemType?
  createdAt    DateTime  @default(now())
  isBorrowable Boolean   @default(true)
  borrower     String?
  borrowDate   DateTime?
  category     Category  @relation(fields: [categoryId], references: [id])
}
